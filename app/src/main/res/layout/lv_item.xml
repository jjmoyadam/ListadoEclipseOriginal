<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/veige"
    
    android:weightSum="7" >
    <ImageView
        android:id="@+id/imgItemListas"
        android:layout_height="@dimen/alto_icono_lista"                       
        android:padding="0dp"
        android:src="@drawable/ic_excel"
        android:layout_width="0dp"
        android:gravity="center|left"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_nombre_archivo"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:textSize="@dimen/tamanio_letra_listado_archivos"
        android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>