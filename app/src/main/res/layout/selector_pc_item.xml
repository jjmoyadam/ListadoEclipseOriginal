<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    
    
    android:weightSum="7" >
    <ImageView
        android:id="@+id/img_estado_pc"
        android:layout_height="@dimen/alto_icono_selector_pc"
        android:layout_width="@dimen/alto_icono_selector_pc"                       
        android:padding="0dp"        
        
        android:gravity="center|left"
         />

    <TextView
        android:id="@+id/tv_descripcion_pc_selector"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/tamanio_letra_listado_archivos"
        android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>